<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Buat Postingan Baru</h5>
        <form action="/posts" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <textarea class="form-control" name="content" rows="3" placeholder="Apa yang kamu pikirkan?" required></textarea>
            </div>

            <div class="mb-3">
                <label for="postImage" class="form-label">Tambahkan Gambar (Opsional)</label>
                <input class="form-control" type="file" id="postImage" name="postImage">
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">Posting</button>
            </div>
        </form>
    </div>
</div>

<h3 class="mb-3">Feed</h3>

<% if (posts.length > 0) { %>
    <% posts.forEach(post => { %>
        <div class="card mb-4 shadow-sm post-card">
            <div class="card-header bg-white border-0 d-flex align-items-center p-3">
                <% if (post.user) { %>
                    <img src="/uploads/avatars/<%= post.user.profilePicture %>" alt="Avatar" width="40" height="40" class="rounded-circle me-3">
                    <div>
                        <a href="/profile/<%= post.user.username %>" class="fw-bold text-dark text-decoration-none"><%= post.user.username %></a>
                        <small class="d-block text-muted"><%= new Date(post.createdAt).toLocaleString('id-ID', { dateStyle: 'medium', timeStyle: 'short' }) %></small>
                    </div>
                <% } else { %>
                    <span class="text-muted fst-italic">Pengguna Dihapus</span>
                <% } %>
            </div>

            <% if (post.image) { %>
                <div class="post-image-container">
                    <img src="/uploads/posts/<%= post.image %>" class="img-fluid" alt="Gambar Postingan">
                </div>
            <% } %>

            <div class="card-body p-3">
                <p class="card-text mb-3"><%= post.content %></p>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <form class="like-form me-2" action="/posts/<%= post._id %>/like" method="POST" data-postid="<%= post._id %>">
                            <% if (user && post.likes.map(id => id.toString()).includes(user._id.toString())) { %>
                                <button type="submit" class="btn btn-sm btn-danger">Batal Suka</button>
                            <% } else { %>
                                <button type="submit" class="btn btn-sm btn-outline-danger">Suka</button>
                            <% } %>
                        </form>
                        <a href="#" class="btn btn-sm btn-outline-secondary">Komentar</a>
                    </div>
                    <small class="text-muted fw-bold" id="likes-count-<%= post._id %>"><%= post.likes.length %> Suka</small>
                </div>
            </div>

            <!-- âœ… Bagian komentar -->
            <div class="card-footer bg-light border-0 p-3">
                <% if(post.comments && post.comments.length > 0) { %>
                    <% post.comments.forEach(comment => { %>
                        <%- include('partials/_comment', { comment: comment, user: user, post: post }) %>
                    <% }) %>
                <% } %>

                <!-- ðŸ”¥ Tambahkan kontainer kosong untuk komentar baru (AJAX inject) -->
                <div class="new-comments-container"></div>

                <!-- Form komentar utama -->
                <form action="/posts/<%= post._id %>/comments" method="POST" 
                      class="d-flex align-items-center mt-2 comment-form" 
                      data-postid="<%= post._id %>">
                    <img src="/uploads/avatars/<%= user.profilePicture %>" alt="Avatar" width="30" height="30" class="rounded-circle me-2">
                    <input type="text" name="content" class="form-control form-control-sm" placeholder="Tulis komentar..." required>
                    <button type="submit" class="btn btn-sm btn-primary ms-2">Kirim</button>
                </form>
            </div>
        </div>
    <% }) %>
<% } else { %>
    <div class="text-center">
        <p>Belum ada postingan. Jadilah yang pertama!</p>
    </div>
<% } %>

<div class="container">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <img src="/uploads/avatars/<%= profileUser.profilePicture %>" alt="Avatar" width="150" height="150"
                        class="rounded-circle img-thumbnail">
                </div>
                <div class="col-md-9">
                    <h2 class="mb-0">
                        <%= profileUser.username %>
                    </h2>
                    <p class="text-muted">
                        <%= profileUser.bio %>
                    </p>

                    <div class="d-flex mb-3">
                        <div class="me-4"><strong>
                                <%= posts.length %>
                            </strong> Postingan</div>
                        <div class="me-4"><strong>
                                <%= profileUser.followers.length %>
                            </strong> Pengikut</div>
                        <div><strong>
                                <%= profileUser.following.length %>
                            </strong> Mengikuti</div>
                    </div>

                    <% if (user && user._id.toString() !==profileUser._id.toString()) { %>
                        <div class="d-flex gap-2">
                            <form action="/profile/<%= profileUser._id %>/follow" method="POST">
                                <% if (user.following.map(id=> id.toString()).includes(profileUser._id.toString())) { %>
                                    <button type="submit" class="btn btn-secondary">Unfollow</button>
                                    <% } else { %>
                                        <button type="submit" class="btn btn-primary">Follow</button>
                                        <% } %>
                            </form>

                            <form action="/messages/new/<%= profileUser._id %>" method="POST">
                                <button type="submit" class="btn btn-outline-primary">Kirim Pesan</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3">Postingan</h4>
    <% if (posts.length> 0) { %>
        <% posts.forEach(post=> { %>
            <div class="card mb-4 shadow-sm post-card">

                <% if (post.image) { %>
                    <!-- Gambar full 1 card -->
                    <img src="/uploads/posts/<%= post.image %>" class="card-img-top" alt="Gambar Postingan"
                        style="object-fit: cover; aspect-ratio: 1 / 1;">
                    <% } %>

                        <div class="card-body p-3">
                            <p class="card-text">
                                <%= post.content %>
                            </p>
                        </div>

                        <div class="card-footer bg-white border-0 d-flex flex-column align-items-start gap-2 p-3">
                            <div class="d-flex align-items-center justify-content-between w-100">
                                <div class="d-flex align-items-center">
                                    <form class="like-form me-2" action="/posts/<%= post._id %>/like" method="POST">
                                        <% if (user && post.likes.map(id=> id.toString()).includes(user._id.toString()))
                                            { %>
                                            <button type="submit" class="btn btn-sm btn-danger">Batal Suka</button>
                                            <% } else { %>
                                                <button type="submit"
                                                    class="btn btn-sm btn-outline-danger">Suka</button>
                                                <% } %>
                                    </form>
                                    <a href="#" class="btn btn-sm btn-outline-secondary">Komentar</a>
                                </div>
                                <small class="text-muted fw-bold">
                                    <%= post.likes.length %> Suka
                                </small>
                            </div>
                            <small class="text-muted">
                                <%= new Date(post.createdAt).toLocaleString('id-ID', { dateStyle: 'long' ,
                                    timeStyle: 'short' }) %>
                            </small>
                        </div>
            </div>
            <% }) %>
                <% } else { %>
                    <div class="text-center">
                        <p class="text-muted mt-4">Pengguna ini belum memiliki postingan.</p>
                    </div>
                    <% } %>
</div>